module Kangaru
  module Concerns
    module Validatable
      type validations = Hash[Symbol, Hash[Symbol, untyped]]

      extend Concern
      extend ClassMethods

      @validations: validations

      module ClassMethods
        attr_reader validations: validations

        def validates: (Symbol, **untyped) -> void
      end

      attr_reader errors: Array[Validation::Error]

      def validate: -> void

      def valid?: -> bool

      private

      def validator_for: (Symbol) -> Validation::AttributeValidator
    end
  end
end
